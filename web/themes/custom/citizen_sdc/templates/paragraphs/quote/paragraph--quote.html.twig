{#
  Paragraph Quote wrapper that passes field values into the Quote SDC component.
#}

{% set quote = content.field_quote.0['#context'].value ?? '' %}
{% set source = content.field_source ?? '' %}

{{ include([
  'citizen_sdc:quote',
  '@citizen_sdc/components/03-composites/paragraphs/quote/quote.twig'
], {
  title: paragraph.field_widget_title.value,
  quote: quote,
  source: source,
  slots: {
    image_content: content.field_image,
    quote_content: quote,
    source_content: content.field_source
  }
}, with_context = false, ignore_missing = true) }}
