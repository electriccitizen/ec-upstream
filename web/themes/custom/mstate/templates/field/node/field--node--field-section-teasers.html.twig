 * Theme override for the node title field.
 *
 * This is an override of field.html.twig for the node title field. See that
 * template for documentation about its details and overrides.
 *
 * Available variables:
 * - attributes: HTML attributes for the containing span element.
 * - items: List of all the field items. Each item contains:
 *   - attributes: List of HTML attributes for each item.
 *   - content: The field item content.
 * - entity_type: The entity type to which the field belongs.
 * - field_name: The name of the field.
 * - field_type: The type of the field.
 * - label_display: The display settings for the label.
 *
 * @see field.html.twig
 */
#}

{% extends 'field.html.twig' %}

{% block fieldMultiNoItems %}
  {{ attach_library('mstate/accordion') }}
  <div class="field field-accordion-items">
    {%- for item in items-%}
      {% set controlParent = 'accordion-content-' ~ loop.index %}
      {% set text = {
        '#type': 'processed_text',
        '#text': item.content['#paragraph'].field_long_text.0.value,
        '#format': item.content['#paragraph'].field_long_text.0.format
      } %}
      <div class="accordion-item" data-accordion-id="{{ loop.index }}">
        <div class="accordion-header">
          <a href="#" role="button" aria-controls="{{ controlParent }}" aria-expanded="false">{{ item.content['#paragraph'].field_accordion_header.0.value }}</a>
        </div>
        <div class="field field-long-text text-long" id="{{ controlParent }}" aria-hidden="true">
          {{ drupal_field('field_image','paragraph',item.content['#paragraph'].id.0.value) }}
          <div class="inner-text">
            {{ text }}
            {{ drupal_field('field_button','paragraph',item.content['#paragraph'].id.0.value) }}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
{% endblock %}