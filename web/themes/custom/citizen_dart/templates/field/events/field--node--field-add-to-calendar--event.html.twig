{% extends 'field.html.twig' %}

{% block fieldSingleNoItems %}
  {%- for item in items -%}
    {% block fieldSingleNo %}

			{% set location = element['#object'].field_address.value.0.address_line1 ~ ', ' ~ element['#object'].field_address.value.0.locality ~ ', ' ~ element['#object'].field_address.value.0.administrative_area ~ ' ' ~ element['#object'].field_address.value.0.postal_code %}

      {# Loop through the start and end dates using the same index #}
      {% for i in 0..start_dates|length - 1 %}
        {# Google Calendar link #}
				<a class="ec-button" href="https://www.google.com/calendar/render?action=TEMPLATE&text={{ element['#object'].title.value }}&dates={{ start_dates[i] }}/{{ end_dates[i] }}&details={{ element['#object'].field_meta_description.value }}&location={{ location | url_encode }}" target="_blank">
				  Add to Google Calendar
				</a>

        {# Apple Calendar link (.ics file) #}
        <a class="ec-button" href="/generate-ics?start={{ start_dates[i] }}&end={{ end_dates[i] }}" target="_blank">
          Add to Apple Calendar (.ics)
        </a>

				{{dd()}}
      {% endfor %}

    {% endblock %}
  {%- endfor -%}
{% endblock %}
