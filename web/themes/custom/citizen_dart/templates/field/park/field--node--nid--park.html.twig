{% extends 'field.html.twig' %}

{% block fieldSingleNo %}
  <h2>Park Details</h2>
  <div class="park-details">
    {% if element['#object'].field_park_type.0 %}
      <div class="park-type detail-item">
        <span class="inline-label">Park Type:</span>
        {% if element['#object'].field_park_type.0.value == 'outdoor' %}
          Dog Park
        {% else %}
          {{ element['#object'].field_park_type.0.value|replace({'_':' '}) }}
        {% endif %}
      </div>
    {% endif %}
    {% if element['#object'].field_area.0 %}
      <div class="park-area detail-item">
        <span class="inline-label">Size:</span>
        {{ element['#object'].field_area.0.value }}
      </div>
    {% endif %}
    {% if element['#object'].field_capacity.0 %}
      <div class="park-capacity detail-item">
        <span class="inline-label">Capacity:</span>
        {{ element['#object'].field_capacity.0.value }}
      </div>
    {% endif %}
    {% if element['#object'].field_amenities.0 %}
      <div class="park-amenities detail-item">
        <span class="inline-label">Amenities:</span>
        {% for amenity in element['#object'].field_amenities %}
          <a href="{{ path('entity.node.canonical', {'node': '67'}) }}?combine=&field_amenities_target_id%5B%5D={{ amenity.target_id }}">{{ amenity.entity.name.0.value }}</a>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </div>
    {% endif %}
    {% if element['#object'].field_address.0 %}
      <div class="park-address detail-item">
        <span class="label">Address:</span>
        <div class="address-line1">
          {{ element['#object'].field_address.0.address_line1 }}
        </div>
        <div class="address-line2">
          {{ element['#object'].field_address.0.address_line2 }}
        </div>
        <div class="address-locale">
          {{ element['#object'].field_address.0.locality }}, {{ element['#object'].field_address.0.administrative_area }} {{ element['#object'].field_address.0.postal_code }}
        </div>
      </div>
    {% endif %}
    {% if element['#object'].field_hours.0 %}
      <div class="park-hours detail-item">
        <span class="inline-label">Hours:</span>
        {{ element['#object'].field_hours.0.value }}
      </div>
    {% endif %}
  </div>
{% endblock %}
          