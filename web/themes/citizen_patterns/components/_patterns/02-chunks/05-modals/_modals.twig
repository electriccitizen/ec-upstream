{#
	STYLEGUIDE ONLY
#}
<div class="modal">
	<div class="modal-lead" data-attribute-id="{{ modalId }}">
		<button id="modal-trigger-{{ modalIdentifier }}">{{ modalTrigger }}</button>
	</div>
	<div class="modal-wrapper" id="modal-outer-{{ modalIdentifier }}">
		<dialog class="modal-inner" id="modal-inner-{{ modalIdentifier }}" aria-modal="true" tabindex="-1">
			<button class="modal-close" id="modal-close-{{ modalIdentifier }}">âœ•<span class="visually-hidden">close</span></button>
			{% if modalHeader %}
			<div class="modal-header">
				<h2>{{ modalHeader }}</h2>
			</div>
			{% endif %}
			<div class="modal-content">
				{% if embedForm %}
				<div class="form-embed">
					{% autoescape false %}
						{{- embedForm -}}
					{% endautoescape %}
				</div>
				{% else %}
				{{ modalContent }}
				{% endif %}
			</div>
		</dialog>
	</div>
</div>